<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".UserRideActivity"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:gravity="top">        <LinearLayout            android:id="@+id/map_container"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_marginTop="50dp"            android:gravity="bottom"            android:orientation="vertical"            android:visibility="gone">            <fragment                android:id="@+id/map"                android:name="com.google.android.gms.maps.SupportMapFragment"                android:layout_width="match_parent"                android:layout_height="match_parent" />        </LinearLayout>        <LinearLayout            android:id="@+id/layout_cancel"            android:layout_width="match_parent"            android:layout_height="50dp"            android:background="@drawable/bottom_background"            android:layout_alignParentTop="true"            android:gravity="center_vertical|end"            android:orientation="vertical"            android:paddingEnd="10dp">            <TextView                android:id="@+id/btn_passenger_cancel"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/string_cancel"                android:fontFamily="@font/poppins"                android:textColor="#06BF00" />        </LinearLayout>        <LinearLayout            android:id="@+id/layout_passenger_notify"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@drawable/transparent_gradient"            android:layout_below="@+id/layout_cancel"            android:visibility="gone">            <TextView                android:id="@+id/passenger_notify"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:fontFamily="@font/poppins"                android:textAlignment="center"                android:textColor="@color/colorBlack"                android:textSize="18sp"                android:textStyle="bold" />        </LinearLayout>        <LinearLayout            android:id="@+id/layout_time_cost"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            android:layout_below="@+id/layout_passenger_notify"            android:layout_marginTop="30dp"            android:layout_marginBottom="20dp">            <LinearLayout                android:id="@+id/layout_service_time"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical"                android:gravity="center_horizontal">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="@string/string_service_time"                    android:fontFamily="@font/poppins"                    android:textAlignment="center"/>                <TextView                    android:id="@+id/txt_service_time"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="45:00"                    android:fontFamily="@font/poppins"                    android:background="@drawable/plate_border"                    android:paddingHorizontal="20dp"                    android:paddingVertical="5dp"                    android:layout_marginTop="5dp"                    android:textColor="@color/colorBlack"                    android:textSize="20sp"/>            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical"                android:gravity="center_horizontal"                android:layout_marginTop="10dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="@string/string_service_cost"                    android:fontFamily="@font/poppins"                    android:textAlignment="center"/>                <TextView                    android:id="@+id/txt_service_cost"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="35 MXN"                    android:fontFamily="@font/poppins"                    android:background="@drawable/plate_border"                    android:paddingHorizontal="20dp"                    android:paddingVertical="5dp"                    android:layout_marginTop="5dp"                    android:textColor="@color/colorBlack"                    android:textSize="20sp"/>            </LinearLayout>        </LinearLayout>        <LinearLayout            android:id="@+id/layout_slider"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:layout_below="@+id/layout_time_cost">            <androidx.constraintlayout.widget.ConstraintLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content">                <androidx.cardview.widget.CardView                    android:layout_width="match_parent"                    android:layout_height="0dp"                    app:layout_constraintDimensionRatio="H,5:3"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    android:layout_alignParentTop="true"                    app:cardCornerRadius="@dimen/_10sdp">                    <androidx.viewpager.widget.ViewPager                        android:id="@+id/slider_clinic"                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:background="@color/white"/>                </androidx.cardview.widget.CardView>            </androidx.constraintlayout.widget.ConstraintLayout >        </LinearLayout>    </RelativeLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:layout_marginBottom="10dp"        android:paddingStart="15dp"        android:paddingEnd="15dp">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@drawable/back_edittext_location"            android:orientation="vertical"            android:paddingBottom="10dp">            <LinearLayout                android:id="@+id/layout_before_arrive"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical"                android:gravity="center"                android:visibility="visible">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:paddingStart="10dp"                    android:paddingEnd="10dp">                    <LinearLayout                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:orientation="vertical"                        android:gravity="center">                        <LinearLayout                            android:layout_width="70dp"                            android:layout_height="match_parent"                            android:padding="10dp">                            <de.hdodenhof.circleimageview.CircleImageView                                android:id="@+id/img_driver_avatar"                                android:layout_width="50dp"                                android:layout_height="50dp" />                        </LinearLayout>                        <LinearLayout                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_weight="1"                            android:gravity="center"                            android:orientation="vertical"                            android:padding="5dp">                            <TextView                                android:id="@+id/txt_deliveryname"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginStart="5dp"                                android:fontFamily="@font/poppins"                                android:textSize="16sp" />                            <LinearLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:gravity="start"                                android:orientation="horizontal">                                <ImageView                                    android:id="@+id/img_star"                                    android:layout_width="20dp"                                    android:layout_height="20dp"                                    app:srcCompat="@drawable/ic_baseline_star_24" />                                <TextView                                    android:id="@+id/txt_driver_review"                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:fontFamily="@font/poppins"                                    android:text="4.4" />                            </LinearLayout>                        </LinearLayout>                    </LinearLayout>                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="vertical">                        <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="10dp"                            android:layout_marginBottom="5dp"                            android:gravity="center"                            android:orientation="vertical"                            android:visibility="visible">                            <TextView                                android:id="@+id/car_brand"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:textAlignment="center"                                android:textColor="@color/colorBlack"                                android:fontFamily="@font/poppins"                                android:textSize="20dp" />                            <TextView                                android:id="@+id/txt_carnumber"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:background="@drawable/plate_border"                                android:paddingStart="10dp"                                android:paddingTop="3dp"                                android:paddingEnd="10dp"                                android:paddingBottom="3dp"                                android:textAlignment="center"                                android:textColor="@color/colorBlack"                                android:textSize="20sp"                                android:fontFamily="@font/poppins"                                android:visibility="invisible" />                        </LinearLayout>                        <LinearLayout                            android:id="@+id/layout_communication"                            android:layout_width="match_parent"                            android:layout_height="40dp"                            android:gravity="center|bottom"                            android:visibility="visible">                            <RelativeLayout                                android:id="@+id/layout_call"                                android:layout_width="wrap_content"                                android:layout_height="match_parent"                                android:layout_centerInParent="true"                                android:gravity="center|bottom">                                <androidx.appcompat.widget.AppCompatButton                                    android:id="@+id/img_phone"                                    android:layout_width="wrap_content"                                    android:layout_height="30dp"                                    android:layout_alignParentBottom="true"                                    android:background="@drawable/ripple_effect_pink"                                    android:elevation="10dp"                                    android:fontFamily="@font/poppins"                                    android:paddingHorizontal="5dp"                                    android:text="@string/string_call"                                    android:textAllCaps="false"                                    android:textColor="@color/colorWhite"                                    android:textSize="12sp" />                            </RelativeLayout>                            <RelativeLayout                                android:layout_width="wrap_content"                                android:layout_height="match_parent"                                android:layout_centerInParent="true"                                android:gravity="bottom|start"                                android:layout_toRightOf="@+id/layout_call">                                <androidx.appcompat.widget.AppCompatButton                                    android:id="@+id/btn_driver_whatsapp"                                    android:layout_width="wrap_content"                                    android:layout_height="30dp"                                    android:layout_marginLeft="10dp"                                    android:background="@drawable/ripple_effect_black"                                    android:fontFamily="@font/poppins"                                    android:paddingHorizontal="5dp"                                    android:text="@string/string_message"                                    android:layout_centerInParent="true"                                    android:textAllCaps="false"                                    android:textColor="@color/colorWhite"                                    android:textSize="12sp" />                                <TextView                                    android:id="@+id/txt_counter_badge"                                    android:layout_width="20dp"                                    android:layout_height="20dp"                                    android:text="2"                                    android:textColor="@color/colorWhite"                                    android:textAlignment="center"                                    android:layout_marginLeft="80dp"                                    android:elevation="10dp"                                    android:layout_marginTop="0dp"                                    android:background="@drawable/back_pink_button"                                    android:visibility="gone"/>                            </RelativeLayout>                        </LinearLayout>                    </LinearLayout>                </LinearLayout>                <androidx.appcompat.widget.AppCompatButton                    android:id="@+id/btn_booking"                    android:layout_width="fill_parent"                    android:layout_height="40dp"                    android:layout_marginStart="30dp"                    android:layout_marginTop="5dp"                    android:layout_marginEnd="30dp"                    android:background="@drawable/ripple_effect_black"                    android:fontFamily="@font/poppins"                    android:paddingStart="5dp"                    android:paddingEnd="5dp"                    android:text="@string/string_waiting"                    android:textAllCaps="false"                    android:textColor="@color/colorWhite"                    android:visibility="gone" />            </LinearLayout>        </LinearLayout>    </RelativeLayout></LinearLayout>